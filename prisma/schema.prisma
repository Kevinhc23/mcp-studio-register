generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  lastName String
  email    String
  terms    Boolean @default(false)

  createdAt DateTime @default(now())

  @@index([email], name: "email_idx")
  @@map("users")
}
