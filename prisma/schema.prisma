generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  lastName String
  email    String  @unique
  terms    Boolean @default(false)

  createdAt DateTime @default(now())

  @@index([email], name: "email_index")
  @@map("users")
}
